arxivId = {NIHMS150003},
author = {Honey, C J and Honey, C J and Sporns, O and Sporns, O and Cammoun, L and Cammoun, L and Gigandet, X and Gigandet, X and Thiran, J P and Thiran, J P and Meuli, R and Meuli, R and Hagmann, P and Hagmann, P},
