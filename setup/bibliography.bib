journal = {Pain},
keywords = {DTI,NCF,PAG,Pain},
number = {1-2},
pages = {169--178},
pmid = {16616418},
title = {{Determining anatomical connectivities between cortical and brainstem pain processing regions in humans: A diffusion tensor imaging study in healthy controls}},
volume = {123},
year = {2006}
}
